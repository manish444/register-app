pipeline {
   agent {'Jenkins-Agent'}
   tools {
         jdk 'java17'
         maven 'Maven3' 
         }
   stages{
       stage("cleans workspace"){
           steps{
             CleanWS() ##this fun is used by workspace clean pipeine plugin to remove unnecessary files before working on it
              }
       }
       stage("checkout from SCM"){
             steps{
             git branch: 'main', credentialsId: 'github', URL: 'https://github.com/manish444/register-app' 
             }
       }
       stage("build appliation"){
            steps{
            sh 'mvn clean package'  ##removes build artifacts from previous builds to start with a clean workspace
            }
       }
       stage(Test Application){
             steps{
              sh 'mvn test'
             }
       }
       stage(){

       }
}
}
}
